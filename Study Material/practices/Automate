---Clone the code--------------------------------------------------------------

git clone https://gitlab.com/sachin-borde/springboothelloworld.git

---java install--------------------------------------------------------------

sudo apt-get update

sudo apt install openjdk-17-jre-headless -y

java --version

sudo apt-get remove openjdk-17-jre-headless -y

---maven install--------------------------------------------------------------

sudo apt update

sudo apt-get install maven -y

mvn --version

sudo apt-get remove maven -y

---apache tomcat install--------------------------------------------------------------

sudo wget https://dlcdn.apache.org/tomcat/tomcat-9/v9.0.86/bin/apache-tomcat-9.0.86.tar.gz

sudo tar xzvf apache-tomcat-9.0.86.tar.gz

sudo rm -r apache-tomcat-9.0.86.tar.gz

---create jar file--------------------------------------------------------------

sudo apt-get update

sudo mvn clean install

---run the jar file--------------------------------------------------------------

java -jar SpringBootHelloWorld-3.2.3.jar


&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
___________________________________________________________________________________________________________
&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

FROM openjdk:17-alpine
EXPOSE 8080
ADD target/SpringBootHelloWorld-3.2.3.jar helloworld
ENTRYPOINT ["java", "-jar","helloworld"]

&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
